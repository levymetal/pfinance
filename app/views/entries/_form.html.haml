= form_for @entry, :html => {:novalidate => true} do |f|
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount, :pattern => "\\d*"
  .field
    = f.label :category_id
    = f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name')
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
