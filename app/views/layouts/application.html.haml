    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "//fonts.googleapis.com/css?family=Ubuntu:400,700", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body.loading
    #wrapper
      #top-links.clearfix
        = link_to_back @previous_page
        = nav_link '', root_path, 'icon-home'
        = nav_link '', archive_entries_path, 'icon-calendar'
        = nav_link '', categories_path, 'icon-cabinet'
        =# link_to '', ''
        = nav_link '', settings_path, 'icon-cog settings'
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      #content

        = yield